<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        
     <bean id="methodReplacerClass" class="com.durgasoft.beans.MethodReplacerClass"></bean>
    
    <bean id="courseBean" class="com.durgasoft.beans.Course">
        <property name="cid" value="C-11"/>
        <property name="cname" value="JavaSE"></property>
        <property name="ccost" value="12057"></property>
        <replaced-method name="getCourseDetails" replacer="methodReplacerClass"/>
    </bean>
</beans>