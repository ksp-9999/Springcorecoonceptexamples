<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="I18NBean" class="com.durgasoft.beans.I18NBean">
        <property name="ms" ref="resourceBundleMS"/>
    </bean>
    <bean id="resourceBundleMS" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="com/durgasoft/resources/abc"></property>
	</bean>

</beans>